<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.Leanback"/>

    <!--TODO Put resources into their appropriate Folders!-->

    <style name="StyleContactTextAppearance">
        <item name="android:text">Lorem Ipsum Dolar Sit Amet</item>
        <item name="android:textSize">@dimen/size_text_normal</item>
        <item name="android:textColor">#cf707070</item>
        <item name="android:drawablePadding">@dimen/size_padding_hor_small</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="FONT">REGULAR</item>
    </style>

    <style name="StyleHorSpace">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="StyleVerLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StyleHorLinearLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleWeatherDayTextAppearance">
        <item name="FONT">THIN</item>
        <item name="android:text">LOREM</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">@dimen/size_text_tiny</item>
        <item name="android:textColor">@color/color_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleWeatherValueTextAppearance">
        <item name="FONT">REGULAR</item>
        <item name="android:textColor">@color/color_tertiary</item>
        <item name="android:textSize">@dimen/size_text_small</item>
        <item name="android:text">51D</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleSurfWeatherTitle">
        <item name="FONT">LIGHT</item>
        <item name="android:textSize">@dimen/size_text_micro</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/color_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleSurfWeatherIconDisplay">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
    </style>

    <style name="StyleSurfWeatherValue">
        <item name="FONT">REGULAR</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/size_text_micro</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
