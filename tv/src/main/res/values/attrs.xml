<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RTV">
        <attr name="FONT" format="enum">
            <enum name="THIN" value="0"/>
            <enum name="LIGHT" value="1"/>
            <enum name="REGULAR" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="RentalView">
        <attr name="rentalIcon" format="reference"/>
        <attr name="rentalPrice" format="string|reference"/>
        <attr name="rentalTitle" format="string|reference"/>
    </declare-styleable>

    <declare-styleable name="SplitLayout">
        <attr name="view_spacing_position" format="float"/>
        <attr name="view_spacing_size" format="integer|dimension"/>
        <attr name="layout_orientation" format="enum">
            <enum name="orientation_vertical" value="0"/>
            <enum name="orientation_horizontal" value="1"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="ClipFrame">
        <attr name="TOP_LEFT_RADII" format="dimension"/>
        <attr name="TOP_RIGHT_RADII" format="dimension"/>
        <attr name="BOTTOM_LEFT_RADII" format="dimension"/>
        <attr name="BOTTOM_RIGHT_RADII" format="dimension"/>
    </declare-styleable>

</resources>