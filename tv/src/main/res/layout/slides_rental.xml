<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<com.californiadreamshostel.officetv.VIEWS.SplitLayout
    app:layout_orientation="orientation_vertical"
    app:view_spacing_position="0.5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rentals_image"
            android:scaleType="centerCrop"
            android:src="@drawable/san_diego_scenery"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:background="#30585858"
            android:paddingBottom="@dimen/size_padding_ver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginStart="@dimen/size_padding_hor"
            android:layout_marginTop="@dimen/size_padding_ver"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.californiadreamshostel.officetv.VIEWS.RTV
                android:textStyle="bold"
                android:textColor="@color/color_milk"
                android:text="C  A  L  I"
                android:textSize="@dimen/size_text_hulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.californiadreamshostel.officetv.VIEWS.RTV
                android:textStyle="bold"
                android:textColor="@color/color_milk"
                android:text="D  R  E  A  M  S"
                android:textSize="@dimen/size_text_hulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.californiadreamshostel.officetv.VIEWS.RTV
                android:textStyle="bold"
                android:textColor="@color/color_milk"
                android:text="R E N T A L S "
                android:textSize="@dimen/size_text_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        </FrameLayout>


    </FrameLayout>

    <View
        android:background="@color/color_milk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.californiadreamshostel.officetv.VIEWS.SplitLayout>


    <com.californiadreamshostel.officetv.VIEWS.SplitLayout
        app:layout_orientation="orientation_vertical"
        app:view_spacing_position="0.4"
        android:paddingStart="@dimen/size_padding_hor_large"
        android:paddingEnd="@dimen/size_padding_hor_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:background="@drawable/bg_rounded_rect_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.californiadreamshostel.officetv.VIEWS.SplitLayout>

    </FrameLayout>